<div id="publication-{{publication.id}}" class="border border-solid border-blue w-2/3 my-4 p-2">
    {% if app.request.attributes.get('_route') != "app_publication_details" %}
        <a href="{{ path('app_publication_details', {'id': publication.id}) }}">
    {% endif %}
        <div class="my-1 flex gap-2 justify-between my-3">
            <p>{{ publication.author.username }}</p><p>{{ publication.publishedAt|date('d/m/Y - h:m:i') }}</p>
        </div>
        <p>{{ publication.content }}</p>
        <div class="flex justify-between items-center">
            <div class="flex gap-2 my-5">
                {% for tag in publication.tags %}
                    <span class="bg-blue-200 text-blue-800 px-2 py-1 rounded-full">{{ tag.label }}</span>
                {% endfor %}
            </div>
            {{ emoji(publication)|raw }}
            <div>
                {{ publication.commentaries|length }} commentaires
            </div>
        </div>
    {% if app.request.attributes.get('_route') != "app_publication_details" %}
        </a>
    {% endif %}
</div>
